@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}
@model Quan_li_ky_tuc_xa.Models.Entities.User
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link rel="stylesheet" href="~/css/long.css">
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h2>Đăng Nhập</h2>
            
                <form asp-controller="Acc" asp-action="Login" method="post" class="mt-3 enctype=">
                    <div style="margin-top:7px" class="form-group row">
                        <label asp-for="Username" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Username" class="form-control" placeholder="Username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>

                    <div style="margin-top:7px" class="form-group row">
                        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div style="margin-top:10px" class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                        </div>
                    </div>
                </form>
                <div class="form-links">
                <p>
                    Chưa có tài khoản? <a asp-action="Register" class="btn btn-primary px-3">DK</a>
                </p>
                    <p><a href="index.html">Về trang chủ</a></p>
                </div>
            <div id="message" class="message"></div>
        </div>
    </div>
    <script src="auth.js"></script>
</body>
</html>
@if (ViewBag.Error != null)
{
    <div class="text-danger mt-2">@ViewBag.Error</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success mt-2">@TempData["Success"]</div>
}