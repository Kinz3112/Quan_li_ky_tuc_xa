        <script type="text/javascript">
            // Line chart example
            var randomScalingFactor = function(){ return Math.round(Math.random()*100) };
            var lineChartData = {
                labels : ["Jan","Feb","Mar","Apr","May","Jun","Jul"],
                datasets : [
                    { label: "A", data : [randomScalingFactor(),randomScalingFactor(),randomScalingFactor(),randomScalingFactor(),randomScalingFactor(),randomScalingFactor(),randomScalingFactor()] },
                    { label: "B", data : [randomScalingFactor(),randomScalingFactor(),randomScalingFactor(),randomScalingFactor(),randomScalingFactor(),randomScalingFactor(),randomScalingFactor()] }
                ]
            };
            window.onload = function(){
                var ctx = document.getElementById("templatemo-line-chart")?.getContext("2d");
                if (ctx) { window.myLine = new Chart(ctx, { type: 'line', data: lineChartData, options: { responsive: true } }); }
            };
        </script>
        <script>
            (function($){
                // 1) Khi hamburger click: toggle bootstrap collapse on .templatemo-sidebar (mobile)
                // và toggle desktop-hidden class on body/template for desktop.
                $('.tm-hamburger').on('click', function(e){
                    e.preventDefault();
                    // bootstrap collapse toggle (works on mobile or when .collapse present)
                    $('.templatemo-sidebar').collapse('toggle');

                    // additionally toggle a desktop class (so desktop can hide/show too)
                    // Use .template-page-wrapper as container if you prefer, here we toggle on <body>
                    $('body').toggleClass('sidebar-hidden-desktop');
                });

                // 2) If window resized to mobile, ensure body class removed to avoid conflict
                $(window).on('resize', function(){
                    if ($(window).width() <= 767) {
                        $('body').removeClass('sidebar-hidden-desktop');
                    }
                });

                // 3) Optionally: if collapse shown (mobile), focus search input
                $('.templatemo-sidebar').on('shown.bs.collapse', function () {
                    $('#q').focus();
                });
            })(jQuery);
